<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        <item name="android:windowBackground">@color/cardview_light_background</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:statusBarColor">@color/secondaryColorPrimary</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppThemeForDefualt" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        <item name="android:windowBackground">@color/cardview_light_background</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="color">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Caption" parent="@android:style/TextAppearance">
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Caption1" parent="@android:style/TextAppearance">
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>

    <style name="videosheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/videosheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="videosheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/video_round_corner</item>
    </style>

    <style name="videosheetDialogTheme" parent="videosheetDialog" />

    <style name="PauseDialogAnimation">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowEnterAnimation">@anim/scale_fade_in</item>
        <item name="android:windowExitAnimation">@anim/scale_fade_out</item>
    </style>
</resources>
