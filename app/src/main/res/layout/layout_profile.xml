<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Fragment.NewProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp15">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp10"
            android:src="@mipmap/default_pic" />

        <TextView
            android:id="@+id/idTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@id/image"
            android:paddingTop="@dimen/dp5"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/emailIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTxt"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp4"
            android:layout_toRightOf="@id/image"
            android:text="rajat0001786@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobileTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailIdTv"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp4"
            android:layout_toRightOf="@id/image"
            android:text="9118919678"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/coverWarningAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobileTv"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/circle1"
        android:padding="@dimen/dp6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/warningIc"
            android:drawableLeft="@drawable/rect_circle"
            android:text="You haven't added Address yet"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/warningIc"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:src="@drawable/warning_icon" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/ic_cross" />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp45"
        android:background="@drawable/curve_dash"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp16"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="Buy"
                    android:textSize="@dimen/sp24"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="Sellpay"
                    android:textSize="@dimen/sp24"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="40"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="50"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/rect2"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrKycUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/ic_update_kyc"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Update KYC"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/rect2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrPayMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/ic_pay_methods"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Payment Methods"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/rect2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/ic_notifications_black_24dp"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Notifications"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/rect2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrChangePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/iic_change_pass"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Change Password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/rect2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrHelpCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/ic_headset"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Help Center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/rect2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrBecomeMerchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/ic_check_simple"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Become a Merchant"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/rect2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cvrLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp24"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/ic_baseline_exit_to_app_24"
                        app:tint="@color/darkTintColorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp10"
                        android:text="Log out"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp10"
                        android:src="@drawable/payu_arrow_right" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

