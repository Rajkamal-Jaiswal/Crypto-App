<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:alpha=".7"
        android:text="1/3. Set Type &amp; Price"
        android:textColor="@color/black"
        android:textSize="@dimen/sp12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/rect_line" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/c1"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:layout_gravity="center"
                android:background="@drawable/circle2"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rect_line" />

            <LinearLayout
                android:id="@+id/c2"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:layout_gravity="center"
                android:background="@drawable/circle1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rect_line" />

            <LinearLayout
                android:id="@+id/c3"
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:layout_gravity="center"
                android:background="@drawable/circle1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="3" />
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Asset"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/rect2"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:hint="SPC"
                android:padding="@dimen/dp10"
                android:textColorHint="@color/hint_text_color" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With Fiat"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:background="@drawable/rect2"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:hint="INR"
                android:padding="@dimen/dp10"
                android:textColorHint="@color/hint_text_color" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp24"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:alpha=".7"
        android:text="Price Settings"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/btnback" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Price Type"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/small_text_size" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/stroke1"
        android:weightSum="2">

        <TextView
            android:id="@+id/fixedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp2"
            android:layout_weight="1"
            android:background="@drawable/rect_1_white"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="Fixed"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/floatingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp2"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="Floating" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <EditText
        android:id="@+id/etEnterAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/rect2"
        android:hint="Enter Amount"
        android:padding="@dimen/dp10"
        android:textColorHint="@color/hint_text_color"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:text="Fixed"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/small_text_size" />

    <RelativeLayout
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp40"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/rect2">

        <ImageView
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/dp10"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/amtTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/btnPlus"
            android:layout_toEndOf="@id/btnMinus"
            android:alpha=".7"
            android:gravity="center"
            android:text="78.09"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/dp10"
            android:src="@drawable/ic_plus" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:scrollbarSize="@dimen/sp12"
        android:text="Highest Order Price"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toStartOf="@id/btnPlus"
        android:layout_toEndOf="@id/btnMinus"
        android:alpha=".7"
        android:gravity="center"
        android:text="78.09"
        android:textColor="@color/black"
        android:textStyle="bold" />
</androidx.appcompat.widget.LinearLayoutCompat>